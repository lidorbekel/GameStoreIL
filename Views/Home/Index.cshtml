@model IEnumerable<WebApplication_GameStoreIL.Models.Category>

@{
    ViewData["Title"] = "Home Page";
}

<link rel="stylesheet" type="text/css" href="~/css/home.css">
<h1 class="display-2">Games Store</h1>
<div class="row">
    <div class="container">

        <iframe width="867" height="1110" src="https://www.youtube.com/embed/zymRNmdzF2k" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
    </div>

</div>

<div class="text-center">
    <h1 class="display-2">Games Store</h1>
    <p>Games for all ages!</p>
</div>

<section id="searchSection">
    <form asp-controller="Products" asp-action="SearchByName">
        <div class="input-group mb-4">
            <input type="text" class="form-control" id="productName" name="productName" required min="1" placeholder="Search a game" aria-label="Search product">
            <div class="input-group-append">
                <button type="submit" value="Search" class="btn btn-dark">Search</button>
            </div>
        </div>
    </form>


    <form asp-controller="Products" asp-action="AdvancedSearch">
        <p class="text-dark">Advanced Search:</p>
        <div class="row">
            <div class="col-md-3">
                <input type="text" id="productName" class="form-control" name="productName" required min="1" placeholder="Game name">
            </div>
            <div class="col-md-3">
                <select class="custom-select" name="category" id="category" aria-label="Category select" required>
                    <option value="" selected disabled>Category</option>
                    @foreach (var item in Model)
                    {
                        <option value="@item.Name">@item.Name</option>
                    }
                </select>
            </div>
            <div class="col-md-3">
                <select class="custom-select" aria-label="Min price select" name="price" id="price" required>
                    <option value="" selected disabled>Max Price</option>
                    <option value="30">30</option>
                    <option value="50">50</option>
                    <option value="100">100</option>
                    <option value="125">125</option>
                    <option value="150">150</option>
                    <option value="200">200</option>
                </select>
            </div>
            <div class="col-md-3">
                <button type="submit" value="Search" class="btn btn-dark">Search</button>
            </div>
        </div>
    </form>
</section>


